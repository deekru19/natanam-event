{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/createRazorpayOrder",
        "function": "createRazorpayOrder"
      },
      {
        "source": "/testCreateOrder",
        "function": "testCreateOrder"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
